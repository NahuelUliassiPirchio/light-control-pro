{
  "name": "light-control-pro",
  "version": "1.0.0",
  "description": "A Cutting-Edge Electron Application for Effortless Smart Light Control from Your PC",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron --enable-logging .",
    "build": "electron-builder --win --linux",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "Nahuel Uliassi Pirchio <uliassipirchio@gmail.com>",
  "license": "ISC",
  "build": {
    "appId": "nahueluliassipirchio.light.control.pro",
    "productName": "Light Control Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "main.js",
      "bulbController.js",
      "dataController.js",
      "package.json",
      "public"
    ],
    "extraResources": [
      {
        "from": "path/to/extra/files",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app requires access to the microphone."
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": ["nsis", "zip"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "category": "Utility",
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^26.6.10",
    "electron-builder": "^24.13.3",
    "eslint": "^8.51.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-squirrel-startup": "^1.0.0",
    "uuid": "^9.0.1"
  }
}
